<Window x:Class="ProfessionalHW_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfessionalHW_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel>
        <Image x:Name="imageControl" Height="360" Width="360"/>
        <StackPanel Margin="20" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="PreviousButton" Content="Назад" FontSize="20" HorizontalAlignment="Left" Margin="0,0,50,0" VerticalAlignment="Top" Width="142" Height="60" Click="PreviousButton_Click" FontFamily="Calibri"/>
            <Button x:Name="NextButton" Content="Далі" FontSize="20" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="142" Height="60" Click="NextButton_Click" FontFamily="Calibri"/>
        </StackPanel>
    </StackPanel>
</Window>
